---
// @ts-ignore
import { Icon } from "astro-icon/components";

// List of founding sponsor images, their alt text, and URLs
const foundingSponsors = [
  { src: "/assets/sponsors/casa.webp", alt: "Learn More", url: "https://casa.io", format: "webp" },
  { src: "/assets/sponsors/compass.webp", alt: "Learn More", url: "https://compassmining.io", format: "webp" },
  { src: "/assets/sponsors/fedi.webp", alt: "Learn More", url: "https://www.fedi.xyz", format: "webp" },
  { src: "/assets/sponsors/unchained.webp", alt: "Learn More", url: "https://unchained.com", format: "webp" },
];

// List of other sponsor images, their alt text, and URLs
const otherSponsors = [
  { src: "/assets/sponsors/Colorado_AirFilter.webp", alt: "Support Us", url: "https://coloradoairfilter.com", format: "webp" },
  { src: "/assets/companies/peony_lane.webp", alt: "Support Us", url: "https://www.peonylanewine.com/", format: "webp" },
  { src: "/assets/companies/tallowz.webp", alt: "Support Us", url: "https://tallowz.com/", format: "webp" },
  { src: "/assets/sponsors/TheSpace_Logos_Symbol_4.webp", alt: "Support Us", url: "mailto:contact@denver.space", format: "webp" },
];
---

<style>
  /* CSS styling. Custom background gradient, grid formatting, and control for different screen sizes. */
  .custom-gradient {
    background: linear-gradient(135deg, #E51F5D, #F68830, #F5D54C, #FDE3B7);
  }
  .white-svg {
    filter: invert(100%) sepia(0%) saturate(0%) hue-rotate(0deg) brightness(100%) contrast(100%);
  }
  .sponsors-grid {
    display: grid;
    gap: 2rem; /* Adjust vertical gap between rows */
    justify-items: center;
    align-items: center;
  }
  @media (min-width: 1024px) { /* Large screens */
    .sponsors-grid {
      grid-template-columns: repeat(4, 1fr); /* 4 columns on large screens */
    }
  }
  @media (min-width: 768px) and (max-width: 1023px) { /* Medium screens */
    .sponsors-grid {
      grid-template-columns: repeat(2, 1fr);
      grid-template-rows: repeat(2, auto);
    }
  }
  @media (max-width: 767px) { /* Small screens */
    .sponsors-grid {
      grid-template-columns: repeat(2, 1fr);
      grid-template-rows: repeat(3, auto);
    }
  }
</style>

<div class="mt-24 mb-0 custom-gradient py-12">
  <h2 class="text-center text-white px-12">Made Possible by our Founding Sponsors</h2>
  <div class="sponsors-grid mt-10 mb-2">
    {foundingSponsors.map(sponsor => (
      <a href={sponsor.url} target="_blank" rel="noopener noreferrer" class="block">
        {sponsor.format === 'svg' ? (
          <div class="h-12 w-12 md:h-20 md:w-20 white-svg">
            <img src={sponsor.src} alt={sponsor.alt} loading="eager" class="object-contain h-full w-full" />
          </div>
        ) : (
          <img src={sponsor.src} alt={sponsor.alt} loading="eager" class="h-12 w-12 md:h-20 md:w-20 object-cover rounded-full" />
        )}
      </a>
    ))}
  </div>

  <!-- Add new section heading here -->
  <h2 class="text-center text-white px-12 mt-12">Become one of our Supporters</h2>
  <div class="sponsors-grid mt-10 mb-2">
    {otherSponsors.map(sponsor => (
      <a href={sponsor.url} target="_blank" rel="noopener noreferrer" class="block">
        {sponsor.format === 'svg' ? (
          <div class="h-12 w-12 md:h-20 md:w-20 white-svg">
            <img src={sponsor.src} alt={sponsor.alt} loading="eager" class="object-contain h-full w-full" />
          </div>
        ) : (
          <img src={sponsor.src} alt={sponsor.alt} loading="eager" class="h-12 w-12 md:h-20 md:w-20 object-cover rounded-full" />
        )}
      </a>
    ))}
  </div>
</div>